{
  "name": "colorogger",
  "version": "0.0.1",
  "description": "A simple colorful logger. Both for browser and node-server. Easy to report and record.",
  "main": "lib/server.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "fmt": "prettier --config ./.prettierrc.js --write ./src",
    "lint": "eslint ./src --fix",
    "cz": "git add . && git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TabSpace/colorogger.git"
  },
  "bugs": {
    "url": "https://github.com/TabSpace/colorogger/issues"
  },
  "homepage": "https://github.com/TabSpace/colorogger#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "commitizen": "^4.1.2",
    "conventional-changelog-cli": "^2.0.27",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.5.0",
    "eslint-config-alloy": "^3.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "power-assert": "^1.6.1",
    "prettier": "^2.1.1",
    "rollup": "^2.26.6",
    "rollup-plugin-typescript": "^1.0.1",
    "semantic-release": "^17.1.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-unknown",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "./hooks/pre-commit.sh && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "pillar0514@163.com",
  "license": "MIT"
}
