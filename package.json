{
  "name": "colorogger",
  "version": "0.0.1",
  "description": "A simple colorful logger. Both for browser and node-server. Easy to report and record.",
  "main": "lib/server.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "test": "jest ./test",
    "fmt": "prettier --config ./.prettierrc.js --write ./src",
    "lint": "eslint ./src --fix",
    "example:server": "node ./example/server.js",
    "example:client": "http-server ./",
    "cz": "git add . && git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TabSpace/colorogger.git"
  },
  "bugs": {
    "url": "https://github.com/TabSpace/colorogger/issues"
  },
  "homepage": "https://github.com/TabSpace/colorogger#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.161",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "commitizen": "^4.1.2",
    "conventional-changelog-cli": "^2.0.27",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.5.0",
    "eslint-config-alloy": "^3.8.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.11",
    "power-assert": "^1.6.1",
    "prettier": "^2.1.1",
    "rollup": "^2.26.6",
    "rollup-plugin-typescript2": "^0.27.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-unknown",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "./hooks/pre-commit.sh && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "pillar0514@163.com",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "lodash": "^4.17.20"
  }
}
