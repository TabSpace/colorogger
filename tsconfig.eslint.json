{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "allowJs": true,
    "declaration": true,
    "rootDir": "./",
    "watch": false
  },
  "include": [
    "./*.js",
    "src",
    "test"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
